  <div class="bg-white overflow-hidden shadow-xl sm:rounded-lg mt-12">

    <table class="table-fixed w-full">
      <thead class="text-xs">
        <tr class="text-white" style="background-color: #1a1a1a;">
          <th class="w-22 py-4 text-center">CODIGO</th>
          <th class="w-1/6 py-4 text-center">PRODUCTO</th>
          <th class="w-1/6 py-4 text-center">CATEGORIA</th>
