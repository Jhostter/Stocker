          <th class="w-28 py-4 text-center">TOOLS</th>
        </tr>
      </thead>
      <tbody class="text-xs">
        {{#each products}}
        <tr>
          <td class="py-3 px-6 text-center">{{codigoProducto}}</td>
          <td class="p-3 text-center">{{espacioNombre nombre}}</td>
          <td class="p-3 text-center">{{espacioNombre categoria}}</td>
          <td class="p-3 text-center">{{moneda precio}}</td>
          <td class="p-3 text-center">{{cantidad}}</td>
          <td class="p-3 text-center">{{descripcion}}</td>
          <td class="p-3 text-center">{{fechaVenta}}</td>

          <td class="p-3 flex">
            <form action="/deleteProduct" method="POST" class="mx-2">
              <input type="hidden" value="{{id}}" name="id">
              <button class="bg-red-500 text-white px-3 py-1 rounded-sm" type="submit">
                <i class="fas fa-trash"></i></button>
            </form>
            <a href="/editProduct{{id}}" class="bg-green-500 text-white px-3 py-1 rounded-sm h-6">
